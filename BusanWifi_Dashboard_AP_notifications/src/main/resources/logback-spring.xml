<?xml version="1.0" encoding="UTF-8"?>
<configuration> <!-- Console Appender -->
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss} [%-5level] \(%file:%line\) %msg%n</pattern>
		</encoder>
	</appender>

	<!-- File Appender -->
	<appender name="all" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${LOG_PATH}</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>${LOG_PATH}_%d{yyyy-MM-dd}.log</fileNamePattern>
			<maxHistory>90</maxHistory>
		</rollingPolicy>
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] [%-5level] \(%file:%line\) %logger - %msg%n</pattern>
		</encoder>
	</appender>

	<!-- Logger -->
	<logger name="com.ncom.bpwapi" additivity="false">
		<level value="INFO" />
		<appender-ref ref="STDOUT" />
		<appender-ref ref="all" />
	</logger>

	<logger name="org" additivity="false">
		<level value="INFO" />
		<appender-ref ref="STDOUT" />
		<appender-ref ref="all" />
	</logger> <!-- Root Logger -->

	<logger name="org.hibernate.SQL" level="INFO" />
	
	<root>
		<level value="INFO" />
		<appender-ref ref="STDOUT" />
		<appender-ref ref="all" />
	</root>
</configuration>