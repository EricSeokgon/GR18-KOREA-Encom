{
    "compilerOptions": {
        "target": "ES3",

        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictBindCallApply": true,
        "removeComments": false,
        "sourceMap": true,

        
        "moduleResolution": "node",

        "declaration": true,
        "declarationMap": false,

        "importHelpers": true,

        "pretty": true,

        "outDir": "lib"
    },
    "include": [
        "src/**/*.ts",
        "extension-src/**/*.ts",
        "test/lib/myTransform/src/**/*.ts"
    ]
}